{% extends ':Frontend:layout_two_column.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style type="text/css">
        {{ Stylesheet }}
    </style>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ PageTitle }}
{% endblock %}

{% block page_header_title %}
    {{ PageTitle }}
{% endblock %}

{% block left_column %}
	{% block breadcrumbs %}
		<ul class="breadcrumbs marginBottom">
	    {% for item in Breadcrumbs %}
	    	{% if item.selected %}
	    		<li><span>{{ item.caption }}</span></li>
	    	{% else %}
	    	    <li><a href="{{ item.href }}">{{ item.caption }}</a></li>
	    	{% endif %}
        {% endfor %}
        </ul>
	{% endblock %}

    {{ Blocks.LeftBlock|raw }}
{% endblock %}

{% block right_column %}
    {{ Blocks.RightBlock|raw }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        {{ Javascript }}
    </script>
{% endblock %}