<div class="createPage_blockTitle">
    Блоки страницы
    <span>(<b>Файл шаблона</b>: {{ twigFileName }})</span>
</div>

{{ form_widget(form) }}

<div id="snippetBootstrapModal" class="modal hide fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Добавить snippet</h3>
    </div>
    <div class="modal-body form-horizontal">
        Выбор сущности:<br />
        <select name="entity">
            {% for groupLabel, optgroup in entitySelectOptions %}
                <optgroup label="{{ groupLabel }}">
                    {% for option in optgroup %}
                        <option value="{{ option.name }}">{{ option.title }}</option>
                    {% endfor %}
                </optgroup>
            {% endfor %}
        </select>
        <hr />
        <span name="entityTitle"></span>:<br />
        <input name="object" type="text" />
    </div>
