<div style="border: 1px solid #EDEDED; width: 178px;">
    <div class="plitka-one">
        {% if object.regions is not empty %}
            {% set region = object.regions[0] %}
            <a href="#" class="plitka-type object-region" data-region-id="{{ region.id }}">{{ region.title }}</a>
        {% endif %}
        <a href="{{ path('armd_atlas_default_object_view', {id: object.id} ) }}" class="image-link">
            {% if object.primaryImage is not empty %}
                {% thumbnail object.primaryImage, 'searchAllResult' with {'alt': object.primaryImage.description, 'class': 'plitka-image'} %}
            {% endif %}
            <div class="plitka-text">
                <span class="plitka-name">
                     {{ object.title|truncate(50) }}
                </span>
            </div>
            <div class="plitka-footer">
                <div class="types-icons">
                    <span title="{{ "types_icons.video"|trans }}" class="ti-video {% if object.mediaVideos is not empty %}active{% endif %}"></span>
                    <span title="{{ "types_icons.virtual_tour"|trans }}" class="ti-360 {% if object.virtualTours is not empty %}active{% endif %}"></span>
                    <span title="{{ "types_icons.infographics"|trans }}" class="ti-info {% if object.image3d is not empty %}active{% endif %}"></span>
                    <span title="{{ "types_icons.photo_gallery"|trans }}" class="ti-photo  {% if object.images is not empty %}active{% endif %}"></span>
                    <span title="{{ "types_icons.archives"|trans }}" class="ti-list {% if object.archiveImages is not empty %}active{% endif %}"></span>
                </div>
            </div>
        </a>
    </div>
</div>