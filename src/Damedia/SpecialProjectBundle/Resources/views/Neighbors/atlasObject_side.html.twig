<div style="border: 1px solid #EDEDED; width: 311px;">

{% if object.images|length > 0 %}
    <div class="map-lister-image">
        <a href="{{ path('armd_atlas_default_object_view', { id:object.id }) }}">
            <img src="{% path object.images[0], 'sideBanner' %}" />
        </a>
    </div>
{% else %}
    <div style="width: 311px; height: 207px; background-color: #F3F3F3; float: none;"></div>
{% endif %}
<div class="map-lister-overflow">
    <div class="map-lister-title">
        <h3>
            {% if object.images|length %}
                <a href="{{ path('armd_atlas_default_object_view', { id:object.id }) }}">{{ object.title }}</a>
            {% else %}
                {{ object.title }}
            {% endif  %}
        </h3>
    </div>
    <div class="map-lister-text">{{ object.announce|raw }}</div>
    {% if not object.images|length %}
        <div class="map-lister-text">
            {% if object.phone %}{{ object.phone }}<br/>{% endif %}
            {% if object.address %}{{ object.address }}{% endif %}
        </div>
    {% endif %}
</div>

</div>