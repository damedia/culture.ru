{% extends 'ArmdNewsBundle:News:press-centre.html.twig' %}

{% block body %}



<style>
    .inp {border:1px solid #ccc; border-radius:3px; width:100%; box-shadow:inset 0 1px 0px #f2f2f2; padding: 5px 10px; font-family:arial; font-size:14px; color:#333;}

</style>
<form action="{{ path('_loginza_social_save') }}" method="post" {{ form_enctype(form) }} style="margin: 10px;">

<table class="auth_tbl" style="font-size: 15px;">
    <tr>
        <td class="td1">{{ form_label(form.email, 'Email') }}</td>
        <td class="td2">&nbsp;</td>
    </tr>
    <tr>
        <td class="td3" colspan="2">{{ form_widget(form.email, { 'attr': {'class': 'inp tblink'} }) }}</td>
    </tr>
    <tr>
        <td class="td1">{{ form_label(form.userName, 'Логин') }}</td>
        <td class="td2"><!--a href="">Забыли пароль?</a-->&nbsp;</td>
    </tr>
    <tr>
        <td class="td3" colspan="2">{{ form_widget(form.userName, { 'attr': {'class': 'inp tblink'} }) }}</td>
    </tr>
    <tr>
        <td class="td4" colspan="2"><input type="submit" class="btn_blue" value="Войти"></td>
    </tr>
</table>
{{ form_rest(form) }}
</form>
<br /><br /><br /><br /><br />

{% endblock %}