{% extends ":Frontend:base.html.twig" %}

{% form_theme form 'ArmdUserBundle:Form:lk_form_theme.html.twig' %}

{% block page_header_title %}{{ 'Registration'|trans }}{% endblock %}

{% block body %}
<ul class="breadcrumbs">
    <li><a href="{{ path('armd_main_homepage') }}">{{ 'menu.mainpage'|trans }}</a></li>
    <li><span>{{ 'Registration'|trans }}</span></li>
</ul>

<div class="lk-form registration">
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        {{ form_widget(form) }}
        <div class="form-actions">
            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </form>
</div>
{% endblock %}