{% extends ":Frontend:base.html.twig" %}

{% block page_header_title %}{{ 'Registration'|trans }}{% endblock %}

{% block body %}
<ul class="breadcrumbs">
    <li><a href="{{ path('armd_main_homepage') }}">{{ 'menu.mainpage'|trans }}</a></li>
    <li><span>{{ 'Registration'|trans }}</span></li>
</ul>

<div class="lk-form profile">
    <p>{{ 'registration.confirmed'|trans({'%username%': user.username}, 'FOSUserBundle')|raw }}</p>
    
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.target_path') %}
        {% if targetUrl is not empty %}
        <p>
            <a href="{{ targetUrl }}">{{ 'registration.back'|trans({}, 'FOSUserBundle') }}</a>
        </p>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
