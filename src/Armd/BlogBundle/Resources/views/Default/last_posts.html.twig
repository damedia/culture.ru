{% import 'ArmdNewsBundle::date_macro.html.twig' as armd_news %}

<div class="b-transparent-articles-block b-sidebar-wrap">
    <h3 class="e-block-title">
        {% if user.avatar is empty %}
        <img class="e-title-icon" alt="" src="/img/new/avatar.png">
        {% else %}
        <img class="e-title-icon" alt="" src="{% path user.avatar, 'default' %}">
        {% endif %}
        От автора
    </h3>
{% for entity in items %}
    <article class="b-bordered-article">
        <span class="e-pub-date">{{ armd_news.news_date_short(entity.createdAt) }}</span>
        <a class="e-article-link" href="{{ path('view_blog', {'id': entity.id}) }}">{{ entity.title }}</a>
    </article>
{% endfor %}
    <a class="e-block-link" href="{{ path('blog_list', {'user': user.id}) }}">все публикации</a>
</div>