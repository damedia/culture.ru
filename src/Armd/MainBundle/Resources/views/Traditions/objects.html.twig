{% macro object_item(url, title, img, type, type_icon) %}	
	<li>
		<div class="rusObr-list-one-wrap">
			<div class="rusObr-list-one">
				<div class="religion-type {{ type_icon }}">
					<i></i>
					{{ type|raw }}
				</div>
				<a href="{{ url|raw }}">
					<img src="{{ img }}" alt="" class="rusObr-list-image"></a>
					
				<div class="rusObr-list-text">
					<a href="{{ url|raw }}" class="rusObr-list-header">
						{{ title|raw }}
					</a>
				</div>
			</div>
			
		</div>
	</li>
{% endmacro %}


<div class="rusObr-block traditions-list">
