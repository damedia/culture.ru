{% set anonses = [
    {
        'url':      '/press-centre/events/1240/',
        'img':      'http://culture.ru/ru/uploads/media/news/0001/06/thumb_5466_news_latest.jpeg',
        'title':    'Русская литая икона',
        
    },
	{
        'url':      '/press-centre/events/1180',
        'img':      'http://culture.ru/ru/uploads/media/news/0001/06/thumb_5314_news_latest.jpeg',
        'title':    'Русская икона в канун войны 1812 года. В воспоминание избавления от нашествия галлов…',
        
    }
    
] %}

{% macro anons_item(url, title, img) %}	
	<li class="clearfix">
		<a href="{{ url|raw }}"><img src="{{ img }}" alt="" /></a>
		<div class="right-news-list-text">
			<a href="{{ url }}" class="right-news-name">{{ title|raw }}</a>
			<p>
				{{ title|raw }}
			</p>
		</div>
	</li>
{% endmacro %}



<ul class="right-news-list">
{% for a in anonses %}
    
	{{ _self.anons_item(a.url, a.title, a.img) }}
	
{% endfor %}
	
</ul>
