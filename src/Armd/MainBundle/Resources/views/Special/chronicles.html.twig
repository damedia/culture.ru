{% extends ':Frontend:special.html.twig' %}

{% block stylesheets %}
{{ parent() }}
	<link href="{{ asset('css/blind_chronicles.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="{{ asset('js/blind_chronicles.js') }}"></script>

{% endblock %}

{% block menu %}
    <ul class="main-navigation clearfix" title="{{ 'Main menu'|trans }}">
        {% if app.request.locale == 'ru' %}
            <li><a href="{{ path('armd_main_special_russian_images') }}">{{ 'Navigation.Images of Russia.Title'|trans }}</a></li>
            <li class="active"><a href="{{ path('armd_main_special_chronicles') }}">{{ 'Navigation.Timeline'|trans }}</a></li>
            <li><a href="{{ path('armd_main_special_press') }}">{{ 'menu.news_index'|trans }}</a></li>
            <li><a href="{{ path('armd_main_special_services') }}">{{ 'menu.communication'|trans }}</a></li>
        {% else %}
            <li><a href="{{ path('armd_main_special_russian_images') }}">{{ 'Navigation.Images of Russia.Title'|trans }}</a></li>
            <li><a href="{{ path('armd_main_special_press') }}">{{ 'Navigation.Events'|trans }}</a></li>
            <li><a href="{{ path('armd_main_special_about') }}">{{ 'Navigation.About'|trans }}</a></li>
        {% endif %}
    </ul>
{% endblock %}

{% block body %}
	 {% include "ArmdChronicleBundle:Blind:chronicle.html.twig" %}
{% endblock %}