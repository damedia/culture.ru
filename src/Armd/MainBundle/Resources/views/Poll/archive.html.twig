{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ parent() }} — {{ 'Navigation.PollArchive'|trans }}{% endblock %}

{% block page_header_title %}
    {{ 'Navigation.PollArchive'|trans }}
{% endblock %}

{% block body %}

    <div class="poll-archive-container">
    
        {% for poll in pagination %}
        <div class="poll-archive">
            <div class="poll-archive-description">{{ poll.description }}</div>
            <div class="poll-archive-dates">{{ poll.startDate|date('d.m.Y') }} - {{ poll.endDate|date('d.m.Y')}}</div>
            <div class="poll-archive-links">
                <a href="{{ path('armd_poll_archive_result', {'pollId': poll.id}) }}">результаты</a>
            </div>
        </div>
        {% endfor %}
    
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    
    </div>

{% endblock %}

