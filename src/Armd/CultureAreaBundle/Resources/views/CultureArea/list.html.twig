<div class="d-select-pseudo d-select-nav-inner" id="nav-inner-section">
    <div>Театральное искусство</div>
    <ul>
        {% for category in categories %}
            <li data-cat="{{ category.id }}">{{ category.title }}</li>
        {% endfor %}
    </ul>
</div>
<div class="subcategories">
    <ul id="subcategories-inner">
    </ul>
    {{ content|raw }}
</div>

<style type="text/css"><!--
    .subcategories .cat{ display:none; }
    #nav-inner-section li:hover{ background:#000; }
//--></style>
<script type="text/javascript"><!--
    $(function(){

        $('#subcategories-inner').html($('.subcategories .cat-2 ul').html());

        $('#nav-inner-section li').click(function(){
            $('#subcategories-inner').html($('.subcategories .cat-' + $(this).data('cat') + ' ul').html());
            //$('.subcategories .cat').hide();
            //$('.subcategories .cat-' + $(this).data('cat')).show();
            return false;
        });
        
    });
//--></script>





