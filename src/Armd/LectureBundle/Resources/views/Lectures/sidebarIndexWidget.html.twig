{% if items is not empty %}
    {% import 'ArmdLectureBundle::lecture_macro.html.twig' as lectureMacro %}

    <div class="sidebar-widget">
        {% for item in items %}
            <a href="{{ path('armd_lecture_view', {id: item.id}) }}" class="sidebar-widget-item">
                {{ lectureMacro.lectureThumbnail(item, 'big', {'width': 230, 'height': 'auto', 'display': 'block'}) }}
                <div class="title-pane">
                    {{ item.title }}
                </div>
            </a>
        {% endfor %}
    </div>
{% endif %}