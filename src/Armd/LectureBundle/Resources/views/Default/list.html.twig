{% for lecture in lectures if lectures|length %}
    <div class="plitka-one-wrap">
        <div class="plitka-one">
            <a title="{{ lecture.title }}" href="{{ path('armd_lecture_view', {'id': lecture.id}) }}">
                {% if lecture.lectureVideo.imageMedia is defined %}
                    {% set thumbnailMedia = lecture.lectureVideo.imageMedia %}
                {% elseif lecture.mediaLectureVideo is not empty %}
                    {% set thumbnailMedia = lecture.mediaLectureVideo %}
                {% else %}
                    {% set thumbnailMedia = null %}
                {% endif %}

                {% if thumbnailMedia is not null %}
                    {% thumbnail thumbnailMedia, 'searchAllResult' with { 'alt': lecture.title } %}
                    {#<img alt="{{ lecture.title }}" src="{% path thumbnailMedia, 'searchAllResult' %}"/>#}
                {% endif %}
            </a>
            <div class="plitka-text">
                <span class="plitka-name">
                    <a title="{{ lecture.title }}" href="{{ path('armd_lecture_view', {'id': lecture.id}) }}">
                        {{ lecture.title|truncate(50) }}
                    </a>
                </span>

                {% if lecture.productionYear %}{{ lecture.productionYear~' /' }}{% endif %}
                {% if lecture.timeLength %}{{ lecture.timeLength~' мин. /' }}{% endif %}

                {% for lectureCategory in lecture.categories %}
                    <span><nobr>{{ lectureCategory.title }}</nobr></span>{% if not loop.last %},{% endif %}
                {% endfor %}
            </div>
            <div class="plitka-footer">
                <a href="{{ path('armd_lecture_default_index', { 'lectureSuperTypeCode': lecture.lectureSuperType.code }) }}">
                    {{ lecture.lectureSuperType.name }}
                </a>
            </div>
        </div>
        {# Пока отключим рейтинг
        <span class="star-mark">7,5</span>
        #}
    </div>
{% endfor %}
