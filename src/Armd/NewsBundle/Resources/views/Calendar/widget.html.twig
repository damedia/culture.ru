<table border="1px">
    <tr>
        <th>Пн</th>
        <th>Вт</th>
        <th>Ср</th>
        <th>Чт</th>
        <th>Пт</th>
        <th class="weekend">Сб</th>
        <th class="weekend">Вс</th>
    </tr>
{% for week in calendar %}
    <tr>
    {% for day in week %}
        <td {% if day.isWeekend %} class="weekend" {% endif %}>{{ day.day }}</td>
    {% endfor %}
    </tr>
{% endfor %}    
</table>