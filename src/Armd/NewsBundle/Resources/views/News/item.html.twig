<h1>News</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Announce</th>
            <td>{{ entity.announce }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ entity.body }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ entity.date|date("d.m.Y") }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('armd_news_news_list') }}">
            Back to the list
        </a>
    </li>
</ul>
