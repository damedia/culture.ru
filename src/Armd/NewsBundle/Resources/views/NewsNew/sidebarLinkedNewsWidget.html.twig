{% if items is not empty %}
    {% import 'ArmdNewsBundle::date_macro.html.twig' as armd_news %}

    {% for item in items %}
        <div class="sidebar-item-wrapper">
            <a href="{{ path('armd_news_item_by_category', {id: item.id}) }}" class="sidebar-widget-item">
                {% thumbnail item.image, 'billboard' with {'width': 240, 'height': 'auto', 'display': 'block'} %}
            </a>

            <div class="sidebar-item-description">
                <span class="date">
                    {{ armd_news.macro_date_standart(item.newsDate) }}
                </span>
                <a class="type palette-color-1" href="{{ path('armd_news_list_index_by_category', { 'category': item.category.slug }) }}">
                    {{ item.category.title }}
                </a>
                <a class="sidebar-item-title" href="{{ path('armd_news_item_by_category', {id: item.id}) }}">
                    {{ item.title }}
                </a>
            </div>
        </div>
    {% endfor %}
{% endif %}