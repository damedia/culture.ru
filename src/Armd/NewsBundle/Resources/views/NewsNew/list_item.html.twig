<article>
    <div class="teaser-thumb">
        <span class="date">{{ armd_news.news_date_short(item.newsDate) }}</span>
        <br />
        <img alt="{{ item.title|escape }}" src="{% path item.image, 'list' %}" />
    </div>
    <header>
        <div class="b-post-info">
            <a class="desc-post-link" style="margin: 0" href="{{ path('armd_news_item_by_category', {'id': item.id, 'category': item.category.slug }) }}">{{ item.title }}</a>
        </div>
    </header>
    <div class="teaser-content">
        {{ item.announce|raw }}
    </div>
</article>