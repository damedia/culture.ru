{% extends ':Frontend:layout_one_column.html.twig' %}

{#--------------------------------------------------------------------------------------------------------------------#}
{% block title %}
    {{ parent() }} — {{ 'Navigation.Virtual museums.Title'|trans }}
{% endblock %}

{#--------------------------------------------------------------------------------------------------------------------#}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/jquery.ui.selectgroup.css') }}">
{% endblock %}

{#--------------------------------------------------------------------------------------------------------------------#}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/jquery.ui.selectgroup.js') }}"></script>
    {#<script type="text/javascript" src="{{ asset('swf/swfobject/swfkrpano.js') }}"></script>#}
    <script type="text/javascript" src="{{ asset('bundles/armdmuseum/js/museums.js') }}"></script>
    <script type="text/javascript">
        $(function () {
            armdMuseums.init();
        });
    </script>
{% endblock %}

{#--------------------------------------------------------------------------------------------------------------------#}
{% block page_header_title %}
    {{ "Museums"|trans }}
{% endblock %}

{#--------------------------------------------------------------------------------------------------------------------#}
{% block page_header_search %}
    <div class="search-category">
        <span class="search-dates-label">Выбрать</span>
        <div class="search-category-selects">
            <select name="select1" id="select1" class="uni">
                <option value="1">Категория</option>
                <option value="2">100 лучших фильмов</option>
                <option value="3">Исторические</option>
                <option value="3">Военные</option>
                <option value="3">Драмы</option>
                <option value="3">Трагедии</option>
                <option value="3">Комедии</option>
            </select>
            <select name="select3" id="select3" class="uni">
                <option value="1">Тематика</option>
                <option value="2">Тематика</option>
                <option value="3">Тематика</option>
            </select>
        </div>
        <a href="#" class="button search-dates-button">Показать</a>
    </div>
{% endblock %}

{#--------------------------------------------------------------------------------------------------------------------#}
{% block one_column %}
    {% render 'ArmdMuseumBundle:Default:list' %}
{% endblock %}