{% spaceless %}
<div class="performances-list-holder">
    {% for entity in performances %}
        <a href="{{ path('armd_perfomance_item', {'id': entity.id }) }}" class="performances-list-item" title="{{ entity.title|escape }}">
            {% if entity.gallery and entity.gallery|length > 0 %}
                {% for img in entity.gallery.galleryHasMedias|slice(0,1) %}
                    {% media img.media, 'tile' with {'alt' : entity.title|escape, 'width': 225, 'height': 'auto'} %}
                {% endfor %}
            {% endif %}
            {{ entity.title }}, {{ entity.year }}
        </a>
        {% if loop.index % 4 != 0 %}
            <div class="performances-list-item-separator"></div>
        {% endif %}
    {% endfor %}
</div>
{% endspaceless %}



