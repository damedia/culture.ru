<h1>News list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Name</th>
            <th>Announce</th>
            <th>Date</th>
            <th>Source</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ cmsPath('armd_news', 'listitem', {'id' : entity.id}) }}">{{ entity.id }}</a></td>
            <td>{% thumbnail entity.image, 'small' %}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.announce }}</td>
            <td>{{ entity.date|date("d.m.Y") }}</td>
            <td>{{ entity.source }}</td>            
            <td>
                <ul>
                    <li>
                        <a href="{{ cmsPath('armd_news', 'listitem', {'id' : entity.id}) }}">show</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
