<div class="fos_comment_vote_form_holder">
    <form class="fos_comment_vote_form" action="{{ url('fos_comment_post_thread_object_votes', {'id': id}) }}" data-score-holder="armd_comment_score_{{ id }}" method="POST">

        {% block fos_comment_form_fields %}
            {{ form_errors(form) }}
            {{ form_errors(form.value) }}
            {{ form_widget(form.value) }}

            {{ form_rest(form) }}
        {% endblock %}

        <div class="fos_comment_submit">
            {% block fos_comment_form_submit %}
                <input type="submit" />
            {% endblock %}
        </div>

    </form>
</div>
