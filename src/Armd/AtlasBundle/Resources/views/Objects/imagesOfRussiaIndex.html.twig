{% extends ':Frontend:new_base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('vendor/selectgroup/jquery.ui.selectgroup.css') }}">
    <style type="text/css">
        ul.hub-menu li a:hover {
            color: {{ palette_color_hex }};
        }
    </style>
{% endblock %}

{% block title %}{{ 'ImagesOfRussia'|trans }}{% endblock %}

{% block body %}
    <div class="b-post fullWidth overflowVisible positionRelative">
        <h1 class="imagesOfRussia-title">
            {{ 'ImagesOfRussia'|trans }}
        </h1>

        {% render url('armd_atlas_images_of_russia_indexWidget') %}

        <div class="search-category">
            <div class="search-category-selects">
                <select name="object-region" id="object-region" class="uni">
                    <option value="">{{ "search_category.region"|trans }}</option>
                    {% for region in regions %}
                        {% if regionId == region.id %}
                            {% set selected = 'selected' %}
                        {% else %}
                            {% set selected = '' %}
                        {% endif %}
                        <option value="{{ region.id }}" {{ selected }}>{{ region.title }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="search-category-selects">
                <select name="object-type" id="object-type" class="uni">
                    <option value="">{{ "search_category.type"|trans }}</option>
                    {% for type in types %}
                        <option value="{{ type.id }}">{{ type.title }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="search-category-selects">
                <select name="object-thematic" id="object-thematic" class="uni">
                    <option value="">{{ "search_category.theme"|trans }}</option>
                    {% for thematic in thematics %}
                        <option value="{{ thematic.id }}">{{ thematic.title }}</option>
                    {% endfor %}
                </select>
            </div>
            <div id="search-russia-images-button" class="search-category-submit displayInlineBlock palette-color-2">
                {{ "search_category.show"|trans }}
            </div>



                <!--
                    <a href="#" id="search-russia-images-button" class="button search-dates-button"></a>
                -->
        </div>

        {% render url('armd_atlas_images_of_russia_list', { 'limit': 30, 'region_id': regionId, 'search_text': searchQuery }) %}
    </div>
{% endblock %}

{% block sidebar %}{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('vendor/jquery-ui/jquery-ui-1.8.24.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('vendor/selectgroup/jquery.ui.selectgroup.js') }}"></script>
    <script type="text/javascript">
        $(window).load(function(){
            $('div.b-pagination-nav').css('margin-top', '10px');

            $('select.uni').each(function(){
                $(this).selectgroup();
            });

            $('#search-russia-images-button').on('click', function(){
                alert('send ajax request');
            });
        });
    </script>
{% endblock %}