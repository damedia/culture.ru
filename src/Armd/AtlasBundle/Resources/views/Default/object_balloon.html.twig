<div class="bubble">
    {% if entity.images|length > 0 %}
        <div class="bubble_image">
            <a href="{{ path('armd_atlas_default_object_view', { id:entity.id }) }}">
                <img src="{% path entity.images[0], 'thumbnail' %}" />
            </a>
        </div>
    {% endif %}
    <div class="bubble_content">
        <div class="caption">
            {% if entity.images|length %}
                <a href="{{ path('armd_atlas_default_object_view', { id:entity.id }) }}">
                    {{ entity.title }}
                </a>
            {% else %}
                {{ entity.title }}
            {% endif  %}
        </div>
        <div class="text">
            {{ entity.announce|raw }}
        </div>
        {% if not entity.images|length %}
            <div class="text">
                {% if entity.phone %}{{ entity.phone }}<br/>{% endif %}
                {% if entity.address %}{{ entity.address }}{% endif %}
            </div>
        {% endif %}
        {% if editable %}
            <a href="#" class="edit" data-id="{{ entity.id }}">{{ "atlas.edit"|trans }}</div>
        {% endif %}
    </div>
</div>