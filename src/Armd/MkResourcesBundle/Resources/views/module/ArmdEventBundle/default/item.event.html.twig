<h1 style="vertical-align: bottom; display: table-cell; height: 2em;">{{ entity.title }}</h1>

<p class="item-dfn item-dfn-sm">{#{ entity.ContentStream }#}</p>

<ul class="plain-list event-info">
    <li><dfn>Дата проведения мероприятия:</dfn> 
	{#{ entity.date|localDate("d F / H:i") }#}
	{% for schedule in entity.schedule %}
		{{ schedule.beginDate|localDate("d F / Y") }}
	{% endfor %}
	</li>
    <li><dfn>Место проведения:</dfn> {{ entity.place }}</li>
</ul>

