{{ entity.body|raw }}

{% if entity.gallery %}
    {% if entity.gallery.GalleryHasMedias|length > 0 %}
    <p class="odd-title mt50">Фотогалерея {#&laquo;{{ entity.gallery.name }}&raquo;#}</p>
    <div class="gallery-wrap">
        <a href="#null" class="gallery-arrow"></a>
        <div class="gallery cb" style="width: 854px; "><div class="gallery-fade"></div><div class="gallery-i"><ul class="plain-list">
        {% for galleryHasMedia in entity.gallery.GalleryHasMedias %}
            <li>
                <a href="{% path galleryHasMedia.media, 'reference' %}">
                    {% thumbnail galleryHasMedia.media, entity.gallery.defaultFormat %}
                </a>
            </li>
        {% endfor %}
        </ul></div></div><!-- /gallery -->
    </div><!-- /gallery-wrap -->
    {% endif %}
{% endif %}

