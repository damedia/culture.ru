<style>
    .properties{ text-align:left; }
    .properties th{ padding-right:20px; color:#a55; font-weight:normal; }
    #socials-box {
        clear: both;
    }
    
    #info-box-img  {
        padding-bottom: 11px;
    }
    
    .proh-wrap {
        clear: both;
        padding-top: 20px;
    }
    
</style>

<a name="details"></a>
<nav id="nav-sections"><ul>
	<li class="nav-section-0"><a href="#null" title="Показать на Ленте времени">1</a></li>
	<li class="nav-section-2"><a href="#null" title="Показать на карте">3</a></li>
	<li class="nav-section-1"><a href="#null" title="Обсудить">2</a></li>
</ul></nav>
<h1>{{ entity.title }}</h1>
<p class="item-dfn item-dfn-sm"></p>
<aside id="sidebar-i-l">
    <p class="odd-title">Информационная карточка</p>
    <div id="info-box">
        <div id="info-box-img">
            {% thumbnail entity.logo, 'reference' %}
        </div>
        <table class="properties">
        {% if entity.title %}
            <tr>
                <th>Регион</th>
                <td>{{ entity.title }}</td>
            </tr>
        {% endif %}   
        
        {% if entity.square %}    
            <tr>
                <th>Площадь</th>
                <td>{{ entity.square }}</td>
            </tr>
          {% endif %}  
          
          {% if entity.cityCount %}  
            <tr>
                <th>Количество городов</th>
                <td>{{ entity.cityCount }}</td>
            </tr>
          {% endif %}  
          
          {% if entity.villageCount %}    
            <tr>
                <th>Количество других населенных пунктов</th>
                <td>{{ entity.villageCount }}</td>
            </tr>
            {% endif %}  
            
           {% if entity.cityPopulation %}    
            <tr>
                <th>Население (городское)</th>
                <td>{{ entity.cityPopulation }}</td>
            </tr>
            {% endif %}  
            
            {% if entity.villagePopulation %}
            <tr>
                <th>Население (сельское)</th>
                <td>{{ entity.villagePopulation }}</td>
            </tr>
            {% endif %} 
            
            {% if entity.administrativeCenter %}
            <tr>
                <th>Административный центр</th>
                <td>{{ entity.administrativeCenter }}</td>
            </tr>
            {% endif %}
            
            {% if entity.nationality %}
            <tr>
                <th>Народности</th>
                <td>{{ entity.nationality }}</td>
            </tr>
            {% endif %}
            
           {% if entity.language %}
            <tr>
                <th>Языки</th>
                <td>{{ entity.language }}</td>
            </tr>
            {% endif %}
            
           {% if entity.religion %}
            <tr>
                <th>Религии</th>
                <td>{{ entity.religion }}</td>
            </tr>
           {% endif %}
        </table>
    </div>
</aside>
<div>
    {{ entity.text|raw }}
</div>
<nav id="socials-box" class="cb"><ul>
	<li class="social-0"><a href="#null" title="VK">VK</a></li>
	<li class="social-1"><a href="#null" title="FB">FB</a></li>
	<li class="social-2"><a href="#null" title="TW">TW</a></li>
	<li class="social-3"><a href="#null" title="LJ">LJ</a></li>
</ul></nav>

