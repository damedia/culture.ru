{% if entity.gallery %}
<h2>Фотогалерея &laquo;{{ entity.gallery.name }}&raquo;</h2>
<ul class="inline">
    {% for galleryHasMedia in entity.gallery.GalleryHasMedias %}
    <li>
        <a href="{% path galleryHasMedia.media, 'reference' %}">
            {% thumbnail galleryHasMedia.media, entity.gallery.defaultFormat %}
        </a>
    </li>
    {% endfor %}
</ul>
<style type="text/css">
    ul.inline{ background:#eee; margin:0; padding:0; list-style-type:none; }
    ul.inline li{ display:inline-block; }
</style>
