<table width="100%">
    <tr valign="top">
        <td width="300">
            <table>
                <tr>
                    <td>
                        {% if entity.logo %}
                            {% thumbnail entity.logo, 'small' %}
                        {% endif %}
                    </td>
                    <td>
                        <h3>{{ entity.title }}</h3>
                        <div>
                            {{ entity.announce }}
                            <a class="balloon-readmore" href="./subject/q/{{ entity.id }}">Читать&nbsp;подробнее+</a>
                        </div>
                    </td>
                </tr>
            </table>
            <table>
                <tr>
                    <th>Столица:</th>
                    <td>{{ entity.administrativeCenter }}</td>
                </tr>
                <tr>
                    <th>Государственный язык:</th>
                    <td>{{ entity.language }}</td>
                </tr>
                <tr>
                    <th>Площадь:</th>
                    <td>{{ entity.square }}</td>
                </tr>
                <tr>
                    <th>Народности:</th>
                    <td>{{ entity.nationality }}</td>
                </tr>
                <tr>
                    <th>Количество городов:</th>
                    <td>{{ entity.cityCount }}</td>
                </tr>
            </table>
        </td>
        <td>
            {% if galleryRandomImage %}
                <a href="{% path galleryRandomImage.media, 'reference' %}">
                    {% thumbnail galleryRandomImage.media, 'small' %}
                </a>
            {% endif %}
        </td>
    </tr>
</table>
