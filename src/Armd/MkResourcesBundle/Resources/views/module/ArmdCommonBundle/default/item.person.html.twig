{% include 'ArmdMkResourcesBundle::nav-sections.html.twig' %}

<h1>{{ entity.lastname }} {{ entity.firstname }} {{ entity.middlename }}</h1>

<p class="item-dfn item-dfn-sm">{#{ entity.announce|raw}#}</p>

<aside id="sidebar-i-l">
    <p class="odd-title">Информационная карточка</p>
    <div id="info-box">
        {% if entity.image %}
            <div id="info-box-img">{% thumbnail entity.image, 'big' %}</div>
			{% if entity.image.description%}
				<p class="image-author-copyrights-infobox">{{entity.image.description}}</p>
			{% endif %}
        {% endif %}
        <table><tbody>
            {#
            <tr>
                <th>Имя при рождении:</th>
                <td>{{ entity.lastname }} {{ entity.firstname }} {{ entity.middlename }}</td>
            </tr>
            #}
            {#% set years = (entity.deathday-entity.birthday)/31536000 %#}
            <tr>
                <th>Дата рождения:</th>
                <td>{{ entity.birthday|localDate('d F Y') }} {#(61 год)#}</td>
            </tr>
            {% if entity.deathday %}
                <tr>
                    <th>Дата смерти:</th>
                    <td>{{ entity.deathday|localDate('d F Y') }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Место рождения:</th>
                <td>{{ entity.birthpalce }}</td>
            </tr>
            {#
            <tr>
                <th>Гражданство:</th>
                <td>Россия</td>
            </tr>
            #}
            {% if entity.occupation %}
                <tr>
                    <th>Профессия:</th>
                    <td>{{ entity.occupation }}</td>
                </tr>
            {% endif %}
            {#
            <tr>
                <th>Жанр:</th>
                <td><a href="#null">Театральное искусство</a>, <a href="#null">киноискусство</a></td>
            </tr>
            #}
        </tbody></table>

    </div><!-- /info-box -->
</aside><!-- /sidebar-i-l -->

{{ entity.body|raw }}

