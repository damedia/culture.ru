{% if related %}
    <div class="box-title" style="margin-top: 15px;">Связанные материалы</div>
    <div class="proh-wrap">
        <ul class="plain-list inline-list see-also-list">
            {% for entity in related %}
                {% set item = entity['entity'] %}
                {% set usagetype = entity['usagetype'] %}
                {% if item%}
                <li>
                    <a href="{{ cmsPath('armd_common', usagetype, {'id' : item.id}) }}" class="see-also-list-item">
                        <span class="see-also-list-title">{{ item.title }}</span>
                        {% if item.image %}<span class="see-also-list-img">{% thumbnail item.image, 'big' %}</span>{% endif %}
                        <span class="see-also-list-brd"></span><span class="see-also-list-bg"></span>
                        <span class="see-also-list-txt">{{ item.body|striptags|slice(0,150)|raw }}&hellip;</span>
                    </a>
                </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div><!-- /proh-wrap -->
{% endif %}