			}
			
			.rlc-magnifier {
				position: absolute;
				height: 100%;
				top: 0;
				bottom: 0;
				left: 0;
				right: 0;
			}
			
			.rlc-magnifier-frame {
				z-index: 5;
				position: absolute;
				height: 99%;
				top: 0;
				left: 0;
				border: 1px solid #ccc;
				box-shadow: 0 0 10px #ccc;
			}
			
			.rlc-magnifier-frame div {
				background: url("/bundles/armdmkresources/img_index/plug/rlc_sprite.png") no-repeat;
				position: absolute;
				cursor: w-resize;
				opacity: 0.9;
			}
			
			.rlc-magnifier-frame .item-left {
				background-position: 0 -14px;
				left: -19px;
			}
			
			.rlc-magnifier-frame .item-right {
				background-position: 100% 0;
				right: -19px;
			}
			
			.rlc-magnifier-frame .item-center {
				background-position: -115px -4px;
				left: 50%;
				margin-left: -14px;
			}
			
			.rlc-magnifier-drag {
				position: absolute !important;
				z-index: 100;
				cursor: w-resize;
				left: 0;
			}
			
			.rlc-magnifier-frame .item-left,
			.rlc-magnifier-drag.item-left {
				top: -5% !important;
				width: 32px;
				height: 105%;
			}
			
			.rlc-magnifier-frame .item-right,
