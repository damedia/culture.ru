        <div id="theater_block" class="b-main-wrap b-virtual-theatre">
            <div class="b-virtual-theatre-inner">
                <div class="b-virtual-head m-float-left">
                    <div class="b-service-heading"><div>Виртуальный</div> <span>театр</span></div>
                    <ul>
                        <li><a class="order" href="{{ path('armd_perfomance_mainpage', {type: 'recommend', date: date}) }}">рекоммендованные</a></li>
                        <li><a class="order" href="{{ path('armd_perfomance_mainpage', {type: 'popular', date: date}) }}">популярные</a></li>
