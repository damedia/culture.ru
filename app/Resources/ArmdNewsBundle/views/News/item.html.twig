{% extends '::base.html.twig' %}

{% block body %}
<div class="news-one">
    <div class="title-block gray-press">
        <h2>Пресс-центр</h2>
    </div>
    <span class="news-one-date">
        {% set f = entity.date %}
        {% set t = entity.endDate %}
        {{ f.date|date('d') }} {{ ('calendar.full.'~f.date|date('M'))|trans }} / {{ f.date|date('Y') }}
        {% if t %} - {{ t|date('j ')}}{{ ('calendar.full.'~t|date('M'))|trans }}{{ t|date(' /Y') }}{% endif%}        
    </span>
    <h1>{{ entity.title|raw }}</h1>
    {% if entity.image %}
        <div class="img-left">
        {% thumbnail entity.image, 'billboard' %}
        </div>
    {% endif %}
    {{ entity.body|raw }}
    <p style="font-size:15px; color:#f90;">&larr; <a style="color:#f90;" href="{{ path('armd_news_list_index') }}">Назад</a><p>
</div>
