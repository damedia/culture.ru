<!DOCTYPE HTML>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7"><![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js"> <!--<![endif]-->
<head>
    <title>{% spaceless %}{% block title %}{{ 'Portal title'|trans }}{% endblock %}{% endspaceless %}</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="keywords" content="{% spaceless %}{% block meta_keywords %}{% endblock %}{% endspaceless %}">
    <meta name="description" content="{% spaceless %}{% block meta_description %}{% endblock %}{% endspaceless %}">
    <meta name="viewport" content="width=device-width">

    <!-- Opengraph block -->
{% block opengraph %}
    <meta property="og:image" content="{{ asset('img/logo.png') }}" />
{% endblock %}
    <!-- /Opengraph block -->

{% block rss %}
    <link rel="alternate" type="application/rss+xml" href="{{ path('armd_news_rss') }}"  title="{{ 'Events'|trans }}" />
{% endblock %}

    <link rel="icon" type="image/vnd.microsoft.icon" href="favicon.ico">
    <link rel="SHORTCUT ICON" href="favicon.ico">

{% block stylesheets %}
    <link href="/css/new/screen.css" media="screen, projection" rel="stylesheet" type="text/css"/>
    <!--[if lt IE 9]><link rel="stylesheet" media="screen" href="/css/new/ie.css" ><![endif]-->
{% endblock %}

{% block javascripts %}
    <script src="/js/new/jquery.min.js"  type="text/javascript"></script>
    <script src="/js/new/jquery.carouFredSel-6.2.1-packed.js"  type="text/javascript"></script>
    <script src="/js/new/init.js"  type="text/javascript"></script>
    <script src="/js/new/s.js"  type="text/javascript"></script>
    <!--[if lt IE 9]><script src="/js/new/html5.js"></script><![endif]-->
{% endblock %}
</head>
<body>
<div>
    <div class="b-page">
        <div class="b-header">
            <div class="b-header-inner">
                {{ knp_menu_render('new_main', {
                'template':      ':Frontend:new_menu.html.twig',
                'currentClass':  'active',
                'ancestorClass': 'active',
                'depth':          3 }) }}
                <div class="logo"><a href="{{ path('armd_main_homepage') }}"><img src="/img/new/logo-txt.png" width="515" height="104" alt="Компонента"/><span>Культура.рф</span></a></div>
            </div>
        </div>
        <div class="b-main">
            <div class="b-sidebar">
                <div class="b-sidebar-inner">
                    <div class="b-login-links">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a href="{{ path('sonata_user_profile_edit') }}">{{ app.user.username }}</a> /
                        <a href="{{ path('fos_user_security_logout') }}">{{ "auth_logout"|trans }}</a>
                    {% else %}
                        <a href="#login-popup">{{ "auth_login"|trans }}</a>
                        <div id="login-popup" style="display: none;">
                            {% render url('fos_user_security_login', {'popup': true}) %}
                        </div>
                        {#<a href="">Регистрация</a>#}
                    {% endif %}
                    </div>

                    <ul class="b-social-icon-list">
                        <li class="m-vk-icon"><a target="_blank" href="http://vk.com/kulturarf"></a></li>
                        <li class="m-fb-icon"><a target="_blank" href="http://www.facebook.com/culture.ru"></a></li>
                        <li class="m-twt-icon"><a target="_blank" href="https://twitter.com/cultureru"></a></li>
                        <li class="m-ytb-icon"><a target="_blank" href="http://www.youtube.com/results?search_query=%D0%BA%D1%83%D0%BB%D1%8C%D1%82%D1%83%D1%80%D0%B0&amp;oq=%D0%BA%D1%83%D0%BB%D1%8C%D1%82%D1%83%D1%80%D0%B0&amp;gs_l=youtube.3..0l8j0i5l2.1530.3406.0.4081.8.8.0.0.0.0.129.626.4j3.7.0...0.0...1ac.1.11.youtube.AtdpPkVFP3A"></a></li>
                        <li class="m-aa-link">
                            <a class="aa-link" href="{{ path('armd_main_special_homepage') }}">Aa</a>
                        </li>
                    </ul>
                    <div class="b-quick-search">
                        <form id="search-form" action="{{ path('armd_search_results') }}">
                            <input type="text" name="search_query" class="text-field" id="search-txt" autocomplete="off" value="{% block search_query %}{% endblock %}"/>
                            <input type="submit" value="{{ "search"|trans }}" class="search-button" />
                        </form>
                    </div>

                    {% block sidebar %}
                        {% render 'ActualInfoBundle:Default:mainpageWidget' %}
                        {% render 'BlogBundle:Default:lastPost' %}
                    {% endblock %}

                </div>
            </div>

            <div class="b-main-inner">
                {% block body %}{% endblock %}
            </div>
        </div>

        <div class="b-vertical">
            <ul class="b-lang-box">
                {% if app.request.locale == 'ru' %}
                <li class="m-lang-rus"><a href="{{ path('armd_main_homepage', {'_locale': 'en'}) }}">En</a></li>
                {% else %}
                <li class="m-lang-eng m-lang-active"><a href="{{ path('armd_main_homepage', {'_locale': 'ru'}) }}">Ru</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
    <div class="b-footer">
        <div class="b-footer-content">
            <div class="footer-inner">
                <div class="left-direction">
                    <a title="Культура.рф" href="/"><img src="/img/new/footer-logo-img.png" alt=""/></a>
                    <ul class="footer-menu">
                        <li><a href="{{ path('armd_press_center_home') }}">Пресс центр</a></li>
                        <li><a href="#">Блоги</a></li>
                        <li><a href="#">Образы России</a></li>
                        <li><a href="#">Театр</a></li>
                        <li><a href="#">Музей</a></li>
                        <li><a href="#">Кино</a></li>
                        <li><a href="#">Музыка</a></li>
                        <li><a href="#">Лекции</a></li>
                        <li class="m-bold"><a href="#">Спецпроекты</a></li>
                    </ul>
                </div>
                <div class="right-direction">
                    <img src="/img/new/ministry-of-culture.png" alt="Министерство культуры Российской федерации"/>
                </div>
            </div>
            <div class="footer-inner">
                <div class="right-direction m-about-container">
                    <ul class="footer-menu">
                        <li>
                            <a href="#">О проекте</a>
                        </li>
                        <li>
                            <a href="#">Баннеры</a>
                        </li>
                    </ul>
                    <p>
                        При цитировании и копировании материалов
                        с портала активная гиперссылка обязательна
                    </p>
                </div>
            </div>
        </div>
        <div class="b-footer-content m-secondary">
            <div class="footer-inner">
                <div class="left-direction">
                    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div class="b-login-links">
                        <a href="#login-popup">{{ "auth_login"|trans }}</a>
                        {#<a href="#">Регистрация</a>#}
                    </div>
                    {% endif %}
                    <ul class="b-social-icon-list">
                        <li class="m-vk-icon"><a target="_blank" href="http://vk.com/kulturarf"></a></li>
                        <li class="m-fb-icon"><a target="_blank" href="http://www.facebook.com/culture.ru"></a></li>
                        <li class="m-twt-icon"><a target="_blank" href="https://twitter.com/cultureru"></a></li>
                        <li class="m-ytb-icon"><a target="_blank" href="http://www.youtube.com/results?search_query=%D0%BA%D1%83%D0%BB%D1%8C%D1%82%D1%83%D1%80%D0%B0&amp;oq=%D0%BA%D1%83%D0%BB%D1%8C%D1%82%D1%83%D1%80%D0%B0&amp;gs_l=youtube.3..0l8j0i5l2.1530.3406.0.4081.8.8.0.0.0.0.129.626.4j3.7.0...0.0...1ac.1.11.youtube.AtdpPkVFP3A"></a></li>
                    </ul>
                    <div class="b-store-link">
                        <a id="appstore-link" href="#appstore-popup">Приложения для iPad</a>
                        <div id="appstore-popup" style="display:none;">
                            <ul class="appstore-list">
                                <li class="app_store-link-1"><a href="https://itunes.apple.com/ru/app/museums-of-russia/id587766991?mt=8" target="_blank"><img src="{{ asset('img/app_store_1.jpg') }}" alt="" />Museums of Russia</a></li>
                                {% if app.request.locale == 'ru' %}
                                    <li class="app_store-link-2"><a href="https://itunes.apple.com/ru/app/mobil-nyj-gid/id553786184?mt=8"  target="_blank"><img src="{{ asset('img/app_store_2.jpg') }}" alt="" />Мобильный Гид</a></li>
                                    <li class="app_store-link-3"><a href="https://itunes.apple.com/ru/app/muzei-rossii/id553795199?mt=8"  target="_blank"><img src="{{ asset('img/app_store_3.jpg') }}" alt="" />Музеи России</a></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="right-direction">
                    <div class="b-lang-select">
                    {% if app.request.locale == 'ru' %}
                        <a href="{{ path('armd_main_homepage', {'_locale': 'en'}) }}" class="ru-selected"></a>
                    {% else %}
                        <a href="{{ path('armd_main_homepage', {'_locale': 'ru'}) }}" class="en-selected"></a>
                    {% endif %}
                    </div>
                    <a class="aa-link" href="{{ path('armd_main_special_homepage') }}">Aa</a>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
