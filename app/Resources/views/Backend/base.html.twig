{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('vendor/select2/select2.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('vendor/chosen/chosen.css') }}" type="text/css" media="all" />
{% endblock%}

{% block sonata_top_bar_nav %}
    {{ parent() }}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Статистика<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="{{ path('armd_news_admin_statistics') }}">Статистика по новостям</a></li>
        </ul>
    </li>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ tinymce_init() }}

    <script type="text/javascript" src="{{ asset('vendor/chosen/chosen.jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('vendor/select2/select2.js') }}"></script>

    <script type="text/javascript">
        $(function(){
            $('.chzn-select').chosen();

            // Init tags.
            // This is quick and dirty solution to extract available tags
            var tags = $('.select2-tags').data('tags');
            $('.select2-tags').select2({
                tags: tags,
                tokenSeparators: [','],
                width: '450px'
            });
        });
    </script>

{% endblock %}
