{% import 'ArmdNewsBundle::date_macro.html.twig' as armd_news %}
<div id="events">

    <div class="title-block  index-title-block">
   		<h2>{{ 'mainpage.news'|trans }}</h2>
   	</div>

    <div id="events-tabs">
        <ul id="eventsitem-tab">
    	{% for c in categories %}
            <li id="{{ c.slug }}tab" {% if loop.first %}class="active"{% endif %}>
                <span>{{ c.title }}</span>
            </li>
        {% endfor %}
        </ul>
    </div>

    {% for slug, entities in news %}
        <div id="{{ slug }}tab_tab" class="events_tabs" {% if not loop.first %}style = "display:none;" {% endif %}>
            {% set prevDate = null %}
            {% for n in entities %}
                {% if loop.first %}
                    <div class="first-eventsaction">
                        {% if n.image %}
                            <div class="event-image">
                                {% thumbnail n.image, 'list' with {'alt': n.image.description} %}
                            </div>
                        {% else %}
                            <style>.first-eventsaction .theevent {margin-left:0;}</style>
                        {% endif %}
                        <div class="theevent">
                            <span class="date-events">
                                {{ armd_news.news_date(n.newsDate) }}
                            </span>
                            <p class="theevents">
                                <a href="{{ path('armd_news_item_by_category', {'id': n.id, 'category': n.category.slug }) }}">
                                    {% if n.date %}
                                        {{ n.date|date('d.m.Y') }}
                                        {% if n.endDate %} - {{ n.endDate|date('d.m.Y') }}{% endif %}
                                    {% endif %}
                                    {{ n.title|raw }}
                                </a>
                            </p>
                            <p>{{ n.announce|raw }}</p>
                        </div>
                    </div>
                    {% set prevDate = n.newsDate|date('d') %}
                {% else %}
                    {% if n.newsDate|date('d') != prevDate or prevDate is empty %}
                        <div class="date-events-block clearfix">
                            <span class="date-events">
                                {{ armd_news.news_date(n.newsDate) }}
                            </span>
                        </div>
                    {% endif %}
                    <ul class="events-list clearfix">
                        <li class="eventsitem-list">
                            <div class="theeventsitem-list">
                                <span class="date-events">
                                    {{ n.newsDate|date('H:i') }}
                                </span>
                                <div class="theevents">
                                    <p>
                                        <a href="{{ path('armd_news_item_by_category', {'id': n.id, 'category': n.category.slug }) }}">
                                            {% if n.date %}
                                                {{ n.date|date('d.m.Y') }}
                                                {% if n.endDate %} - {{ n.endDate|date('d.m.Y') }}{% endif %}
                                            {% endif %}
                                            {{ n.title|raw }}
                                        </a>
                                    </p>
                                    {#<p>{{ n.announce|raw }}</p>#}
                                </div>
                            </div>
                        </li>
                    </ul>
                    {% if loop.last %}
                        <p class="all-list"><a class="blue-link" href="{{ path('armd_news_list_index_by_category', {'category': 'news'}) }}">{{ 'mainpage.read_more'|trans }}</a></p>
                    {% endif %}
                    {% set prevDate = n.newsDate|date('d') %}
                {% endif %}
            {% endfor %}
        </div>
    {% endfor %}

