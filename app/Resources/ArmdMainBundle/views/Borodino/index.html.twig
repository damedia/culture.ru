	<div class="title">
		<h2>{{ 'Navigation.Borodino.Announcements'|trans }}</h2>
	</div>		
	{% render "ArmdMainBundle:Project:news" with {"subject": subject, "category": "events"} %}
	
	<div class="title">
		<h2>{{ 'Navigation.Borodino.News'|trans }}</h2>
