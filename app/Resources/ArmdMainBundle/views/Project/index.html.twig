{% extends '::base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="/bundles/armdatlas/css/chosen.css">
<style type="text/css">
	.chzn-container-single .chzn-single {border-color:#fff; color:#000;}
	.chzn-container-active .chzn-single-with-drop {border:1px solid #AAA;}
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="/bundles/armdatlas/js/chosen.jquery.js"></script>
<script src="{{ asset('/main/common/js/function.js') }}"></script>
<script src="{{ asset('/swf/swfobject/swfkrpano.js') }}"></script>

<script type="text/javascript">
	$(function(){
		var w=window,d=document,e=d.documentElement,g=d.getElementsByTagName('body')[0],x=w.innerWidth||e.clientWidth||g.clientWidth,y=w.innerHeight||e.clientHeight||g.clientHeight;
		
		if ($('.vob').length){    
			$('.vob').fancybox({
				'autoScale'  : false,
				'autoDimensions' : false,
				'padding':0,
				'margin':0,
				'fitToView':true
			});
		}
		
		$('.panoDIV').css({'width':x-18, 'height':y});					
		
		$(".iframe").fancybox({
		'width' : '100%',
		'height' : '100%',
		'autoScale' : true,
		'transitionIn' : 'none',
		'transitionOut' : 'none',
		'type' : 'iframe',
		
		});
	})  
</script>
{% endblock %}

{% block body%}
<div class="left-column type-2">
    {% block content %}{% endblock %}
</div>
<div class="right-column">
    {% block right %}{% endblock %}
</div>
{% endblock %}